{
  "name": "localbrain-ai-memory-sync",
  "version": "1.0.0",
  "description": "AI Memory Sync Extension - Save and share memory across AI platforms",
  "main": "manifest.json",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "build": "npm run lint && npm run test",
    "dev": "npm run test:watch"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.246",
    "@types/jest": "^29.5.5",
    "eslint": "^8.49.0",
    "jest": "^29.6.4",
    "jest-environment-jsdom": "^29.6.4"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "author": "LocalBrain Team",
  "license": "MIT"
}